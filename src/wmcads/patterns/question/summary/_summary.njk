{% macro wmcadsSummary(params) %}
{# Imports #}
{% from "wmcads/components/form-elements/question/_question.njk" import wmcadsQuestion %}
{% from "wmcads/components/table/_table.njk" import wmcadsTable %}

{# Set vars and defaults #}
{% set question = params.question if params.question else "How would you...?" %}
{% set html = params.html if params.html %}
{% set tables = params.tables if params.tables %}
{% set button = params.button if params.button %}


<div class="bg-white ds-p-md">
    {{
        wmcadsQuestion({
            text: question
        }) | trim | indent(4)
    }}

    {%- if tables -%}
        {%- for table in tables %}
            {{ table | trim | indent(4) | safe }}
        {%- endfor %}
    {% else %}
    {{
        [
            wmcadsTable({
                rows: 3,
                cols: 3,
                cellClasses: ["", "", "ds-text-align-right"],
                title: "Personal Details",
                noHeaders: true,
                classNames: "ds-m-b-xl",
                values: [
                    ["Name", "Andy Street", "<a href=\"#\" title=\"link title\" target=\"_self'\" class=\"ds-link\">Change</a>"],
                    ["Date of Birth", "1 January 2020", "<a href=\"#\" title=\"link title\" target=\"_self'\" class=\"ds-link\">Change</a>"],
                    ["Contact Details", "07700 900 457<br>andy.street@example.com", "<a href=\"#\" title=\"link title\" target=\"_self'\" class=\"ds-link\">Change</a>"]
                ]
            }) | trim | indent(4),

            wmcadsTable({
                rows: 3,
                cols: 3,
                cellClasses: ["", "", "ds-text-align-right"],
                title: "Ticket Details",
                noHeaders: true,
                classNames: "ds-m-b-xl"
            }) | trim | indent(4),

            wmcadsTable({
                rows: 5,
                cols: 3,
                cellClasses: ["", "", "ds-text-align-right"],
                title: "Direct Debit",
                noHeaders: true,
                classNames: "ds-m-b-xl"
            }) | trim | indent(4)
        ] | join("\n    ") | safe
    }}
    {% endif %}



    {{- html | trim | indent | safe }}
    {{ params.button | trim | indent(4) | safe }}
</div>

{% endmacro %}
