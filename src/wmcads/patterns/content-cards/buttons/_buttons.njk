{% macro wmcadsContentCardButtons(params) %}
{# imports #}
{% from "wmcads/components/content-card/_content-card.njk" import wmcadsContentCard %}
{% from "wmcads/components/button/_button.njk" import wmcadsButton %}
{# Set #}
{% set buttons = ["I drive", "I use the bus", "I use the train", "I use the tram", "I walk or cycle", "I want to visit an attraction or venue"] %}

{% call wmcadsContentCard() %}
    <div class="ds-p-sm">
        <h2 class="ds-content-card__title">Advice to keep moving</h2>
        <ul class="ds-content-card__list ds-m-b-none">
            {% for buttonText in buttons -%}
            <li class="ds-content-card__list-item">
                {{
                    wmcadsButton({
                        text: buttonText,
                        classNames: "ds-btn--primary ds-content-card__list-item-btn",
                        iconRight: "general-chevron-right"
                    }) | indent(16) | trim
                }}
            </li>
            {% endfor -%}
        </ul>
    </div>
{% endcall %}

{% endmacro %}
