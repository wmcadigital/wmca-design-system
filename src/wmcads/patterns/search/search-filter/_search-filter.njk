    {% macro wmcadsSearchFilter(params) %}

{# Imports #}
{% from "wmcads/components/icon/_icon.njk" import wmcadsIcon %}

<!-- Mobile show filter button -->
<div class="ds-hide-desktop">
    <button class="ds-btn ds-btn--primary ds-btn--block " id="show_filter_btn" aria-controls="search_filter" aria-expanded="false">
        Filter your results
    </button>
</div>

<div id="search_filter" class="ds-search-filter">
    <div class="ds-search-filter__header">
        <h3 class="ds-search-filter__header-title">Filter</h3>
        <a href="#" class="ds-search-filter__clear-all ds-hide-desktop">Clear all</a>
        <a href="#" id="hide_filter_btn" class="ds-search-filter__close">
            <svg>
                <title>Close</title>
                <use xlink:href="#ds-general-cross" href="#ds-general-cross"></use>
            </svg>
        </a>
    </div>
    {# loop through accordion items #}
    {% for accordion in params.accordion -%}
    <div class="ds-accordion">
      <button aria-controls="accordion-{{accordion.summaryTitle}}" class="ds-accordion__summary-wrapper" aria-expanded="false">
        <!-- accordion summary -->
        <div class="ds-accordion__summary">
          <h4 class="ds-accordion__summary-title ds-m-b-none">{{accordion.summaryTitle}}</h4>
        </div>
        <!-- plus icon -->
        {{wmcadsIcon({class: 'ds-accordion__icon', icon: 'general-expand'}) | trim}}
        <!-- minus icon -->
        {{wmcadsIcon({class: 'ds-accordion__icon ds-accordion__icon--minimise', icon: 'general-minimise'}) | trim}}
      </button>
    
      <!-- accordion content -->
      <div class="ds-accordion__content" id="accordion-{{accordion.summaryTitle}}">
        <fieldset class="ds-fe-fieldset">
            <div class="ds-fe-checkboxes">
            {%- for option in accordion.options %}
                <label class="ds-fe-checkboxes__container">
                    {{option}}
                    <input class="ds-fe-checkboxes__input" value="{{option}}" type="checkbox"/>
                    <span class="ds-fe-checkboxes__checkmark">
                    {{wmcadsIcon({class: 'ds-fe-checkboxes__icon', icon: 'general-checkmark'}) | trim}}
                    </span>
                </label>
            {%- endfor %}
            </div>
        </fieldset>
      </div>
    </div>
    {% endfor -%}
    <div class="ds-search-filter__mobile-filter-update ds-hide-desktop">
        <button id="show_results_btn" class="ds-btn ds-btn--block">Show 80 results</button>
    </div>
    <a href="#" class="ds-search-filter__clear-all ds-hide-mobile">
        <svg>
            <title>Close</title>
            <use xlink:href="#ds-general-cross" href="#ds-general-cross"></use>
        </svg> Clear all filters
    </a>
</div>

{% endmacro %}
