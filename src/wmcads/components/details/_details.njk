{% macro wmcadsDetails(params) %}
{# Imports #}
{% from "wmcads/components/icon/_icon.njk" import wmcadsIcon %}
{# Params  #}
{% set summary = params.summary or "Type something"%}
{% set content = params.content or "Type something"%}

<details class="ds-details" {%- if params.expanded %} open="true" {%- endif -%}>
    <summary class="ds-link">{{summary}}</summary>
    <div class="ds-details__content">
        <p>{{content}}</p>
    </div>
</details>
{% endmacro %}