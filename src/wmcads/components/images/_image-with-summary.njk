{% macro wmcadsImageWithSummary(params) %}
{% set img = params.img if params.img else "https://www.wmca.org.uk/media/1862/andy-street-september-2016-1-002.jpg?anchor=center&mode=crop&width=700&height=700&rnd=131547073580000000" %} {# set img #}
{% set title = params.title if params.title else "Summary heading" %} {# set title text #}
{% set summary = params.summary if params.summary else "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." %} {# set summary text #}

<div class="ds-image__summary">
    <img src="{{img}}" alt="" />
    <h3>{{title}}</h3>
    <p>{{summary}}</p>
</div>
{% endmacro %}