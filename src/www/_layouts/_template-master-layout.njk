<!DOCTYPE html>
<html lang="en-gb" class="ds-html">
  <!-- Head -->
  {% include "www/_partials/_template_head.njk" %}
  <!-- end: Head -->

  <body class="ds-body">
    {# header #}
    {% from "wmcads/patterns/header-v2/_header-v2.njk" import wmcadsHeaderV2 %}
    {{
      wmcadsHeaderV2 ({
        id: "mega-menu",
        navItems: nav,
        banner: false,
        linkTopLevel: true,
        ciaArea: true,
        ds: ds,
        breadcrumbs: {
          section: section,
          pageTitle: pageTitle,
          hideBreadcrumb: hideBreadcrumb
        },
        search: true,
        wmcadsSearch: {
          id: "wmcadsMegaMenuSearch",
          placeholder: 'Search...',
          hideLabel: true
        }
      })
    }}
    {# header #}

    {# summary #}
    {% block summary %}{% endblock %}
    {# end:summary #}

    {% block summaryContent %}{% endblock summaryContent %}

    {# main #}
      {% block body %}{% endblock %}
      {{params}}
    {# main #}

    <!-- footer -->
    {% from "wmcads/patterns/footer/_footer.njk" import wmcadsFooter %}
    {{
      wmcadsFooter({
      columns: footerCol,
      social: true,
      ds: ds,
      menu1: footerMenu1,
      menu2: footerMenu2,
      bottomMenu: [{
        name: "Accessibility"
      },
      {
        name: "Terms and Conditions"
      },
      {
        name: "Policies"
      }]
    })
    }}
    <!-- footer -->

    <!-- Scripts -->
    {% include "www/_partials/_scripts.njk" %}
    <!-- end: Scripts -->
  </body>

</html>
