{% block content %}
<main class="ds-container--main">
<div class="ds-grid ds-grid--align-center ds-grid--spacing-lg-2-xl">
  {# Overview #}
  <div class="ds-col-1 ds-col-lg-2-3 ds-m-b-lg">
    <p>Design Systems used within the West Midlands Combined Authority.</p>
    <p>Use these design systems to build consistent, usable services.</p>
  </div>
</div>
{# Internal navigation #}

<div class="ds-css-grid-4-col">
  {# WMCA #}
  {{
    wmcadsContentCard({
      link: '/wmca/',
      contentHTML: '<div class=\"ds-p-sm\"><h3>West Midlands Combined Authority</h3><p>View the WMCA Design System</p></div>'
    })
  }}
  {# TfWM #}
  {{
    wmcadsContentCard({
      link: '/tfwm/',
