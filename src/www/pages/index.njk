{% extends "www/_layouts/layout-home.njk" %}
{% set pageTitle = "Design Systems" %}
{% set section = 'Home' %}
{% set ds = 'wmca' %}
{# Imports #}
{% from "wmcads/components/content-card/_content-card.njk" import wmcadsContentCard %}
