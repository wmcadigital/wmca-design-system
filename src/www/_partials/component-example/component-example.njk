{% macro compExample(components, params) %}
{% from "wmcads/components/button/_button.njk" import wmcadsButton %}
{% from "wmcads/components/table/_table.njk" import wmcadsTable %}

{% set components = components if components else [wmcadsButton({text: "No component specified to example"})] %}
{% set showAsIframe = true if params.iframe else false %}
{% set componentPath = params.componentPath if params.componentPath else false %}

{% set njk = params.njk if params.njk else false %}
{% set js = params.js if params.js else false %}
{% set njkProps = params.njkProps if params.njkProps else false %}

<div class="ds-website-code-example">
  {# Show a button to allow the user to see the component fullscreen #}
  {{
    wmcadsButton({
      classNames: 'ds-btn--link ds-m-md ds-website-code-example__view-fullscreen',
      text: 'See this example in fullscreen'
    })
  }}
  <hr class="ds-m-none" />


  {# PREVIEW COMPONENT #}
  <div class="ds-website-code-example__inner-wrap">
    {# Loop through components passed in and collect in componentsToRender var #}
    {% set componentsToRender %}
      {%- for item in components %}
        {{item | trim}}
        {% if loop.last == false %}
          {% if params.displayInline %}
            <div class="ds-m-b-md ds-website-mar--right"></div>
          {% else %}
            <div class="ds-m-b-md"></div>
          {% endif %}
        {% endif %}
      {% endfor -%}
    {% endset %}

    {# If iframe var set the show components in iframe #}
    {% if showAsIframe %}
      <iframe sandbox="allow-same-origin allow-scripts" title="Component example" class="ds-website-code-example__iframe ds-col-1" src="about:blank" data-src="{{componentsToRender | e | trim}}" frameBorder="0" loading="lazy" allowtransparency="true" scrolling="no" allow="fullscreen" width="100%" data-path="{{componentPath}}"></iframe>
    {% else %}
    {# Else show components like normal #}
      <div class="ds-website-code-example__njk ds-col-1">
        {{componentsToRender | safe}}
      </div>
    {% endif %}
  </div>
  {# END PREVIEW COMPONENT #}



  {# SHOW DETAIL TAB(S) #}

  {# HTML markup #}
  <hr class="ds-m-none" />
  <details class="ds-details">
    <summary class="ds-link ds-p-md">HTML markup</summary>
    {# Be careful with the below, the whitespace is extremely delicate (like a flower ðŸŒ¸) #}
    {# The loop.revindex checks to see if last in array, if not add a linebreak (again, the fight for making nice whitespace continues) #}
<pre><code class="html" tabindex="0">{% for item in components -%}{{ item | forceescape | trim }}{% if loop.revindex !== 1 %}<br/>{% endif %}{% endfor -%}</code></pre>
  </details>

  {# Njk markup #}
  {% if njk and componentPath %}
    <hr class="ds-m-none" />
    <details class="ds-details">
      <summary class="ds-link ds-p-md">Nunjucks markup</summary>
{# Be careful with the below, the whitespace is extremely delicate (like a flower ðŸŒ¸) #}
<pre><code class="njk" tabindex="0">{%- include componentPath + "_example.njk" -%}</code></pre>
    </details>
  {% endif %}

  {# Njk props #}
  {% if njkProps %}
    <hr class="ds-m-none" />
    <details class="ds-details">
      <summary class="ds-link ds-p-md">Nunjucks properties</summary>
      <div class="ds-p-md">
        <table class="ds-table ds-p-md">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Type</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody>
            {% for prop in njkProps %}
              <tr>
                <th scope="row" data-header="Name">{{prop.name}}</th>
                <td data-header="Type">{{prop.type}}</td>
                <td data-header="Description">{{prop.description | safe}}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </details>
  {% endif %}

  {# JS markup #}
  {% if js and componentPath %}
    <div class="ds-website-code-example__js">
      {# HIDING THIS SECTION until we can compile ES5 for IE11 #}
      {# Show recommended JS (ES2015) #}
      {# <hr class="ds-m-none" />
      <details class="ds-details ds-details--js">
        <summary class="ds-link ds-p-md">Recommended javascript (browser compatible)</summary>
<pre><code class="js" tabindex="0"></code></pre>
      </details> #}

      {# Show recommended JS (ES6) #}
      <hr class="ds-m-none" />
      <details class="ds-details ds-details--es6">
        <summary class="ds-link ds-p-md">Recommended javascript (ES6)</summary>
<pre><code class="js" tabindex="0"></code></pre>
      </details>

      <script type="text/plain" class="ds-website-code-example__script">
        {%- include componentPath + "_example.js" -%}
      </script>
    </div>
  {% endif %}
</div>

{# END SHOW DETAIL TAB(S) #}

<hr>
{% endmacro %}
