<head>
  <meta charset="utf-8" />
  <title>
  {# If homepage #}
  {% if section == "Home" %}
    Home - {{pageTitle}}
  {% else %}
  {# Else any other pages #}
    {{ pageTitle | striptags}} - West Midlands Combined Authority Design System
  {% endif %}
  </title>
  <meta name="description" content="Your one stop shop for travel in the West Midlands" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  {# Favicons #}
  <link rel="apple-touch-icon" sizes="180x180" href="$*cdn/config/favicons/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="$*cdn/config/favicons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="$*cdn/config/favicons/favicon-16x16.png">
  <link rel="manifest" href="$*cdn/config/favicons/site.webmanifest">
  <link rel="mask-icon" href="$*cdn/config/favicons/safari-pinned-tab.svg" color="#3c1053">
  <link rel="shortcut icon" href="$*cdn/config/favicons/favicon.ico">
  <meta name="msapplication-TileColor" content="#3c1053">
  <meta name="msapplication-config" content="$*cdn/config/favicons/browserconfig.xml">
  <meta name="theme-color" content="#3c1053">

  <!-- Website Styles -->
  {% if ds == "wmca" %}
  <link rel="stylesheet" href="$*cdn/css/wmcads.min.css" />
  {% endif %}
  {% if ds == "tfwm" %}
  <link rel="stylesheet" href="$*cdn/css/tfwmds.min.css" />
  {% endif %}
  {% if ds == "st" %}
  <link rel="stylesheet" href="$*cdn/css/stds.min.css" />
  {% endif %}
  {% if ds == "mc" %}
  <link rel="stylesheet" href="$*cdn/css/mcds.min.css" />
  {% endif %}

  <!-- Highlight JS - display HTML blocks as coloured text -->
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.3/styles/a11y-dark.min.css"/>
  <link rel="stylesheet" href="$*cdn/css/ds-website.min.css" />
  <script src="https://kit.fontawesome.com/55e348b8be.js" crossorigin="anonymous"></script>
</head>