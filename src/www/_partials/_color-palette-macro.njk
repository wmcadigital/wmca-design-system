{% macro colorPalette(params) %}

<div class="ds-col-1 ds-col-sm-1-2 ds-col-md-1-3 ds-website-color-swatch">
  <span class="ds-website-color-swatch__inner ds-website-bg-color-{{params.varName}}"></span>
  <div class="ds-grid component-details">
    <div class="ds-col-1">
      <h3>{{params.name}}</h3>

      <pre><code class="scss" tabindex="0">{{- "" -}}
      // HEX
      <span class="color-hex"></span>

      // SCSS VAR
      $get-color({{params.varName}});
      </code></pre>

    </div>
  </div>
</div>

{% endmacro %}