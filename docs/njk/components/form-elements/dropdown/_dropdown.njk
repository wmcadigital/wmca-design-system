{% macro wmcadsDropdown(params) %}

{# Imports #}
{% from "components/form-elements/label/_label.njk" import wmcadsLabel %}

{# Params #}
{% set id = params.id if params.id else "dropdown" %}
<div class="wmcads-fe-group">
  <div class="wmcads-fe-dropdown">
    {{
      wmcadsLabel({
        label: 'Dropdown label',
        for: id
      }) | trim
    }}
    <select class="wmcads-fe-dropdown__select" id="{{id}}" name="{{id}}">
      <option value="" selected="selected">Choose from list</option>
      {%- for i in range(1,6) %}
      <option value="{{i}}">Option {{i}}</option>
      {%- endfor %}
    </select>
  </div>
</div>

{% endmacro %}